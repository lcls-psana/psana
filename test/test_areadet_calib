#!@PYTHON@
 
import sys
import unittest
import psana
import Detector
import numpy as np
import os
class generic_test:
      def __init__(self, calibdir="psana.calib-dir"):
            self.calibdir=calibdir
      def run(self, correct_answer, setoptionstring, dsstring, detstring, x, y, neventRequested=2):
            psana.setOption(self.calibdir, setoptionstring)
            ds=psana.DataSource(dsstring)
            det=psana.Detector(detstring)
            for nevent, event in enumerate(ds.events()):
                  image=det.image(event)
                  current_array=image[x][y:y+5]
                  assert np.allclose(correct_answer[nevent][0:5], current_array, rtol=0.00001)
                  if nevent==neventRequested:
                        break
      
class test_epix100a_calib(unittest.TestCase):
      def test_areadetaccess(self):
          correct_answer=np.array(([-3.34729, 0.45751953, 3.227539, 1.3175049, 1.0874023], [1.0100708, 1.6100464, -0.7050171, -5.590027, 4.524719]))
          my_generic_test=generic_test()
          my_generic_test.run(correct_answer, setoptionstring='/reg/g/psdm/data_test/calib', dsstring='exp=mecl8216:run=305:dir=/reg/g/psdm/data_test/multifile/test_029_mecl8216/', detstring='epix100a', x=0, y=0)

class test_jungfrau_calib(unittest.TestCase):
      def test_epix_calib(self):
            correct_answer=np.array(([-0.20019017, -0.65262175, 0.00742354, 0.01327543, 0.24580742], [0.00225716, 0.45393196, -0.22635312, 0.1017298, 0.19519132], [ 0.04673062, 0.37130964, 0.6615988, -0.06624991, -0.32271868]))
            my_generic_test=generic_test()
            my_generic_test.run(correct_answer, setoptionstring='/reg/d/psdm/xpp/xpptut15/calib', dsstring='exp=xpptut15:run=530', detstring='jungfrau4M', x=700, y=700)

class test_epix10k2m_calib(unittest.TestCase):
      def test_epix_calib_run540(self):
            correct_answer=np.array(([2114.3066, 1984.1064, 1664.3066, 1928.9062, 1669.9951],[1614.3066, 1584.1064, 1864.3066, 1528.9062, 1669.9951],[1814.3066, 1584.1064, 1664.3066, 1428.9062, 1569.9951]))
            my_generic_test=generic_test()
            my_generic_test.run(correct_answer, setoptionstring='/reg/d/psdm/xpp/xpptut15/calib', dsstring='exp=xpptut15:run=540', detstring='epix10ka2m', x=147, y=56)

if __name__ == '__main__':
    unittest.main(argv=[sys.argv[0], '-v'])
